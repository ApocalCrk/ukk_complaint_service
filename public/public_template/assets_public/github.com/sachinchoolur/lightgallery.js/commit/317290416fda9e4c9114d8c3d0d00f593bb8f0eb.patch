Subject: [PATCH] Fix vimeo embed url in gallery

also match player.vimeo.com/video/<video_id>
---
 src/js/lightgallery.js | 2 +-
 1 file changed, 1 insertion(+), 1 deletion(-)

diff --git a/src/js/lightgallery.js b/src/js/lightgallery.js
index 182f418..4d59963 100644
--- a/src/js/lightgallery.js
+++ b/src/js/lightgallery.js
@@ -470,7 +470,7 @@ Plugin.prototype.isVideo = function(src, index) {
     }
 
     var youtube = src.match(/\/\/(?:www\.)?youtu(?:\.be|be\.com|be-nocookie\.com)\/(?:watch\?v=|embed\/)?([a-z0-9\-\_\%]+)/i);
-    var vimeo = src.match(/\/\/(?:www\.)?vimeo.com\/([0-9a-z\-_]+)/i);
+    var vimeo = src.match(/\/\/(?:www\.)?(?:player\.)?vimeo.com\/(?:video\/)?([0-9a-z\-_]+)/i);
     var dailymotion = src.match(/\/\/(?:www\.)?dai.ly\/([0-9a-z\-_]+)/i);
     var vk = src.match(/\/\/(?:www\.)?(?:vk\.com|vkontakte\.ru)\/(?:video_ext\.php\?)(.*)/i);
 
